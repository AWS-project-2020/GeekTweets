<%- include header %>
<div class="container">
    <form class="form-horizontal" method="post">
        <fieldset>
            <legend>Inscription des utilisateurs</legend>
            <div class="form-group">
                <label class="control-label col-md-2" for="username">Identifiant</label>

                <div class="col-md-6">
                    <input type="text" class="form-control" id="username" placeholder = "Geek user name" name="username" required>

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="password">password</label>

                <div class="col-md-6">
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="password-repeat">confirmer password</label>

                <div class="col-md-6">
                    <input type="password" class="form-control" id="password-repeat"
                           name="password-repeat" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">S'inscrire</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>
</div>
<script src="/javascripts/jquery-2.1.4.min.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>


</body>
</html>
